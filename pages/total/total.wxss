

.search{
  display: flex;
  height: 100rpx;
  align-items:center;
  justify-content: center;
}
.search-input{
  display: flex;
  width: 80%;
  height: 60rpx;
  padding: 0 10rpx;
  background:var(--bgColor);
  border-radius: 80rpx;
  align-items: center;
}
[type="search"]{
  height: 22px;
}
.input{
  padding: 0 10rpx;
  flex: 1;
}
.main{
  display: flex;
  width:  100%;
  min-height: calc(100vh - 100rpx);
  overflow: hidden;
}
.menu{
  flex:0 0 160rpx;
  width: 160rpx;
  background:var(--bgColor);
}
.shop{
  flex:1
}